    {% if section.settings.stickyHeaderCompensation %}
      header {
        position: sticky;
        top: 0;
        z-index: 98;
      }
    {% else %}
      #cortadoHeader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 98;
      }
    {% endif %}
    #cortadoHeader.active {
      {% if section.settings.stickyBgGradient != blank %}
        background: {{ section.settings.stickyBgGradient }} !important;
      {% else %}
        background-color: {{ section.settings.stickyBg }} !important;
      {% endif %}
    }
    {% when 'home' %}
    {% if template == "index" %}
      {% if section.settings.stickyHeaderCompensation %}
        header {
          position: sticky;
          top: 0;
          z-index: 98;
        }
      {% else %}
        #cortadoHeader {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          z-index: 98;
        }
      {% endif %}
      #cortadoHeader.active {
        background-color: {{ section.settings.stickyBg }} !important;
      }
    {% endif %}
  {% endcase %}
