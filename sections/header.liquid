    top: -8px;
    right: -12px;
    border-radius: 20px;
    background: {{ section.settings.textColor }};
    color: {{ section.settings.containerBg }};
    font-size: 12px;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
