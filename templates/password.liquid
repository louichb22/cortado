{% layout none %}
<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="{{ settings.mainFontFamilyFile }}" type="text/css" media="all">
  {% if settings.useSecondFontFamily %}<link rel="stylesheet" href="{{ settings.secondFontFamilyFile }}" type="text/css" media="all">{% endif %}
  {{ 'style.css' | asset_url | stylesheet_tag }}
</head>
<body>
  <div class="password">
    <h1 style="color: white;">{{ shop.name }}</h1>
    {% unless shop.password_message == blank %}
    <p>{{ shop.password_message | strip_html }}</p>
    {% endunless %}
    {% form 'storefront_password' %}
      {{ form.errors | default_errors }}
      <div class="form">
        <input type="password" placeholder="Password">
        <button class="btn1" type="submit">{{ 'account.login' | t }}</button>
      </div>
    {% endform %}
  </div>
  <style>
    .password {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      gap: 25px;
      padding: 25px;
    }
    .password > form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 25px;
      padding: 25px;
      background-color: white;
      border-radius: 15px;
    }
    .form {
      display: grid;
      grid-template-columns: repeat(2,1fr);
      gap: 15px;
    }
    .form > input {
      border: solid 2px #f7f7f7;
      background: none;
      padding: 0.6rem 1.2rem;
      outline: none;
    }
    .form > input:hover {
      border: solid 2px #f0f0f0;
    }
    .errors * {
      color: red;
    }
    @media (max-width: 800px) {
      .form {
        grid-template-columns: 100%;
      }
    }
  </style>
</body>
</html>
