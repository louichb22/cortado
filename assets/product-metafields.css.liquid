/*-- Product metafields --*/

.productMetafields {
  display: flex;
  gap: 8px 16px;
  align-items: center;
  flex-wrap: wrap;
}
.productMetafields > span {
  display: flex;
  gap: 6px;
  align-items: center;
  font-size: 16px;
}
@media (max-width: 800px) {
  .productMetafields {
    gap: 4px 8px;
  }
  .productMetafields > span {
    font-size: 14px;
  }
}