///////////  SECTION DYNAMIC MARGINS ON SCROLL FOR SHOPIFY SECTIONS  ////////////

// INSTRUCTIONS
// Include this snippet.



// get the viewport height
let viewPort;

// get the sections
let scrollSections = document.querySelectorAll("div.shopify-section");

// function to see if section is visible
function dynamicScroll() {
  for(let j = 0; j < scrollSections.length; j++){
    viewPort = window.innerHeight;
    distanceFromTop = scrollSections[j].getBoundingClientRect().top;
    if ( distanceFromTop > viewPort ) {
      scrollSections[j].classList.remove("active");
    } else {
      scrollSections[j].classList.add("active");
    };
  };
};

// apply the base margin on load
dynamicScroll();

// run the function on scroll
addEventListener("scroll", (event) => dynamicScroll());














