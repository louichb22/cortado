/*-- General body & elements --*/

* {
  box-sizing: border-box;
  margin: 0;
  transition: all 0.2s;
}

html {
  scroll-behavior: smooth;
}

body {
  background-color: {{ settings.bodyColor }};
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}
.stop-scrolling {
  height: 100%;
  overflow: hidden;
}

main {
  background-color: white;
}

section {
  padding-left: 32px;
  padding-right: 32px;
}
@media (max-width: 800px) {
  section {
    padding-left: 16px;
    padding-right: 16px;
  }
}

@keyframes fadeIn {
  0% {opacity: 0}
  100% {opacity: 1}
}

.shopify-challenge__container {
  padding: 150px 0px;
}

i {
  font-style: normal;
}

/*-- Typography --*/

p, span, a, li, input, label, td, tr, textarea {
  font-family: {% if settings.textFontFamily == "main" %}{{ settings.mainFontFamily }}{% else %}{{ settings.secondFontFamily }}{% endif %};
  font-weight: {{ settings.textWeight }};
  font-size: clamp(16px 2vw 20px);
  line-height: 1.6;
  color: {{ settings.textColor }};
  max-width: 60ch;
}
b, strong {
  font-weight: {{ settings.strongTextWeight }};
}
h1, h2, h3, h4, h5, h6 {
  font-family: {% if settings.headersFontFamily == "main" %}{{ settings.mainFontFamily }}{% else %}{{ settings.secondFontFamily }}{% endif %};
  font-weight: {{ settings.headersWeight }};
  color: {{ settings.headersColor }};
  line-height: 1.2;
  max-width: 60ch;
  {% if settings.headersCapitalize %}text-transform: uppercase;{% endif %}
}
h1 {
  font-size: {{ settings.h1Size }}px;
}
h2 {
  font-size: {{ settings.h2Size }}px;
}
h3 {
  font-size: {{ settings.h3Size }}px;
}
h4 {
  font-size: {{ settings.h4Size }}px;
}
h5 {
  font-size: {{ settings.h5Size }}px;
}
h6 {
  font-size: {{ settings.h6Size }}px;
}
a {
  text-decoration: none;
  cursor: pointer;
}
@media(max-width: 800px) {
  h1 {
    font-size: {{ settings.h1SizeMobile }}px;
  }
  h2 {
    font-size: {{ settings.h2SizeMobile }}px;
  }
  h3 {
    font-size: {{ settings.h3SizeMobile }}px;
  }
  h4 {
    font-size: {{ settings.h4SizeMobile }}px;
